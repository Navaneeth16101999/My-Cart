<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrationServelet</servlet-name>
        <servlet-class>com.learn.myproject.servelets.RegistrationServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServelet</servlet-name>
        <servlet-class>com.learn.myproject.servelets.LoginServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logoutservelet</servlet-name>
        <servlet-class>com.learn.myproject.servelets.Logoutservelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductOperationServelet</servlet-name>
        <servlet-class>com.learn.myproject.servelets.ProductOperationServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServelet</servlet-name>
        <url-pattern>/RegistrationServelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServelet</servlet-name>
        <url-pattern>/LoginServelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logoutservelet</servlet-name>
        <url-pattern>/Logoutservelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductOperationServelet</servlet-name>
        <url-pattern>/ProductOperationServelet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
